<MyReportScreen>:

    MyReportLoginScreen
        name: 'MyReportLoginScreen'
        id: MyReportLoginScreen
    MyReportSWScreen:
        name: 'MyReportSWScreen'
        id: MyReportSWScreen

<MyReportLoginScreen>:
    BoxLayout:
        #center: root.center
        #Barra superior
        orientation: 'vertical'
        ActionBar: 
            ActionView:
                ActionPrevious:
                    title: 'My Report Labor'
                    with_previous: False
                    app_icon: ''
                #ActionButton:
            #        text: 'Button1'
            #    
            #    ActionButton:
            #        text: 'Button2'
        BoxLayout:
            #v_userName: username
            #v_password: password
            GridLayout:
                rows: 2
                cols: 2
                padding: 2
                spacing: 2
                height: self.minimum_height
                row_force_default: True
                size_hint_y: None
                size_hint_x: None
                row_default_height: '32dp'
                width: self.parent.width * 0.600
                #rows_minimum: '100dp'
                Label:
                    text: 'Usuario'
                    size_hint_y: None
                    #size_hint_x: None
                    #width: '500dp'
                    height: '30dp'
                TextInput:
                    id: username
                    size_hint_y: None
                    height: '30dp'
                    size_hint_x: None
                    width: '250dp'

                Label:
                    text: 'Senha'
                    size_hint_y: None
                    height: '30dp'
                TextInput:
                    id: password
                    size_hint_y: None
                    height: '30dp'
                    password: True
                    size_hint_x: None
                    width: '250dp'
        BoxLayout:
            CustomButton:
                size_hint: 1, .4
                pos_hint: {'y': .3}
                text: 'Logar'
                #evento de precionar do botao
                on_press: app.stop()

        #DrillDown
        Spinner:
            id: spinnerJogador
            size_hint_y: None
            background_normal: ''
            color: 0,0,0,1
            height: '50dp'
            text: 'Selecione um jogador'
            #Valores do DrillDown
            values: ['Carlos', 'Veronica']
            #Chama um funcao na classe MyReportScreen que a classe root
            on_text: root.load(self.text)
            
        ScrollView:
            BoxLayout:
                id: box1
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
<CustomButton@Button>:
    background_color: 75, 50, 50, 0.5
    size_hint_y: None
    #size_hint_x: None
    height: self.parent.height * 0.300
    #height: self.parent.width * 0.111

#Define as propriedades dos botoes dentro do drillDown
<Spinnneroption>:
    background_down: ''
    background_normal: ''
    color: 0,0,0,1

<MyReportSWScreen>:
    BoxLayout:
        #Barra superior
        orientation: 'vertical'
        ActionBar: 
            ActionView:
                ActionPrevious:
                    #Volta para a tela de login
                    on_release: root.manager.current = 'MyReportLoginScreen'
                    title: 'My Report Labor - SR e Work Orders'
                    app_icon: ''
        ScrollView:
            BoxLayout:
                id: box2
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height








