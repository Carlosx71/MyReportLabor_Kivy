<MyReportScreen>:

    size_hint: None, None
    canvas.before:
        Color:
            rgba: 96, 96, 96, 0.3  #gray
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        canvas.before:
            Color:
                rgba: 90,27,30,0.7  # blue
            Rectangle:
                pos: self.pos
                size: self.size

        size: self.parent.size  # important!
        pos: self.parent.pos  # important!
        orientation: 'vertical'
        CTextInput:
            size_hint_y: None
            height: '32dp'
            multiline: False
        CTextInput:
            size_hint_y: None
            label: 'Senha'
            height: '32dp'
            password: True
        Button:
            size_hint_x: None
            size_hint_y: None
            height: '30dp'
            text: 'Autenticar'


<CTextInput@TextInput>
    on_focus:
        screen = self.parent.parent.parent.parent
        if screen.parent: screen.focused = self

<MyReportUI>:
    AnchorLayout:
        canvas.before:
            Color:
                rgba: 96, 96, 96, 0.3  # white
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'
        MyReportScreen:
            size: 200, 80
