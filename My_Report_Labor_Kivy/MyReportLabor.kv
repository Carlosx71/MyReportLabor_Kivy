<MyReportSWScreen>:
    BoxLayout:
        #Barra superior
        orientation: 'vertical'
        ActionBar: 
            ActionView:
                ActionPrevious:
                    #Volta para a tela de login
                    on_release: root.manager.current = 'MyReportLoginScreen'
                    title: 'My Report Labor - SR e Work Orders'
                    app_icon: ''
        ScrollView:
            BoxLayout:
                id: boxSRWO
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                Button:
                    size_hint_y: None
                    width: self.parent.width * 0.300
                    height: '50dp'
                    text: 'Listar'
                    background_color: 1,1.5,255,1
                    #background_color: 67, 241, 54, 0.5
                    on_press: root.listSRandWO()
                    StackLayout:
                        pos: self.parent.pos
                        size: self.parent.size
                        orientation: 'lr-tb'
                        Image:
                            source: 'list-icon.png'
                            size_hint_x: None
                            width: 74

