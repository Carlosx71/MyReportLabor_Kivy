        BoxLayout:
            #v_userName: username
            #v_password: password
            pos_hint: {"center_x":.6, "center_y":.6}
            padding : [50,50,50,50]
            GridLayout:
                rows: 3
                cols: 2
                padding: 2
                spacing: 2
                height: self.minimum_height
                row_force_default: True
                size_hint_y: None
                size_hint_x: None
                row_default_height: '32dp'
                width: self.parent.width * 0.500
                #rows_minimum: '100dp'
                Label:
                    text: 'Usuario'
                    size_hint: None, None
                    width: self.parent.width * 0.600
                    height: '30dp'
                TextInput:
                    id: username
                    size_hint_y: None
                    height: '30dp'
                    size_hint_x: None
                    width: self.parent.width * 0.500
                    multiline: False

                Label:
                    text: 'Senha'
                    size_hint: None, None
                    width: self.parent.width * 0.600
                    height: '30dp'
                TextInput:
                    id: password
                    size_hint_y: None
                    height: '30dp'
                    password: True
                    size_hint_x: None
                    width: self.parent.width * 0.500
                    multiline: False
                Label:
                    text: ''
                Button:
                    #size_hint: 1, .4
                    pos_hint: {"center_x":.10, "center_y":.3}
                    size_hint: None, None
                    height: '30dp'
                    width: self.parent.width * 0.500
                    text: 'Logar'
                    #evento de precionar do botao
                    #on_press: app.stop()
                    on_press: root.login()
